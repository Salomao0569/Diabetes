                <!-- Inibidores da DPP-IV -->
                <div class="medication-class" data-class="dpp4">
                    <div class="class-header">
                        <h2>Inibidores da DPP-IV</h2>
                        <button class="btn-toggle">+</button>
                    </div>
                    <div class="class-body">
                        <div class="medication">
                            <div class="medication-header">
                                <h3>Sitagliptina</h3>
                                <button class="btn-toggle">+</button>
                            </div>
                            <div class="medication-body">
                                <div class="medication-info">
                                    <div class="info-section">
                                        <h4>Nome Comercial</h4>
                                        <p>Januvia®</p>
                                        
                                        <h4>Posologia</h4>
                                        <p>50 a 100 mg – 1x/dia</p>
                                    </div>
                                    
                                    <div class="info-section">
                                        <h4>Vantagens</h4>
                                        <ul>
                                            <li>Redução de HbA1c: 0,6%-0,8%</li>
                                            <li>Segurança e tolerabilidade</li>
                                            <li>Não altera o peso</li>
                                            <li>Raramente causa hipoglicemia</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="medication">
                            <div class="medication-header">
                                <h3>Linagliptina</h3>
                                <button class="btn-toggle">+</button>
                            </div>
                            <div class="medication-body">
                                <div class="medication-info">
                                    <div class="info-section">
                                        <h4>Nome Comercial</h4>
                                        <p>Trayenta®</p>
                                        
                                        <h4>Posologia</h4>
                                        <p>5 mg – 1x/dia</p>
                                    </div>
                                    
