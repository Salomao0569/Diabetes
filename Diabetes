    <footer>
        <p>© Consultório de Diabetes 2025 - Todos os direitos reservados</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 1. Expansão/contração das seções
            document.querySelectorAll('.class-header').forEach(header => {
                header.addEventListener('click', function() {
                    const body = this.nextElementSibling;
                    body.classList.toggle('active');
                    const button = this.querySelector('.btn-toggle');
                    button.textContent = body.classList.contains('active') ? '-' : '+';
                });
            });
            
            document.querySelectorAll('.medication-header').forEach(header => {
                header.addEventListener('click', function() {
                    const body = this.nextElementSibling;
                    body.classList.toggle('active');
                    const button = this.querySelector('.btn-toggle');
                    button.textContent = body.classList.contains('active') ? '-' : '+';
                });
            });
            
            // 2. Função de busca
            const searchInput = document.getElementById('search');
            searchInput.addEventListener('input', filterMedications);
            
            // 3. Filtro de classes
            const allClassesCheckbox = document.querySelector('input[value="all"]');
            const specificClassCheckboxes = document.querySelectorAll('#class-list input:not([value="all"])');
            
            allClassesCheckbox.addEventListener('change', function() {
                specificClassCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
                filterMedications();
            });
            
            specificClassCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const allSpecificChecked = Array.from(specificClassCheckboxes).every(cb => cb.checked);
                    allClassesCheckbox.checked = allSpecificChecked;
                    filterMedications();
                });
            });
            
            // 4. Função para filtrar medicamentos
            function filterMedications() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedClasses = Array.from(document.querySelectorAll('#class-list input:checked:not([value="all"])')).map(cb => cb.value);
                
                // Se "Todos" estiver marcado, incluir todas as classes
                if (allClassesCheckbox.checked) {
                    document.querySelectorAll('.medication-class').forEach(cls => {
                        cls.style.display = 'block';
                    });
                } else {
                    // Caso contrário, mostrar apenas as classes selecionadas
                    document.querySelectorAll('.medication-class').forEach(cls => {
                        const classType = cls.getAttribute('data-class');
                        cls.style.display = selectedClasses.includes(classType) ? 'block' : 'none';
                    });
                }
                
                // Filtrar por termo de busca
                let foundAny = false;
                document.querySelectorAll('.medication').forEach(med => {
                    const medicationName = med.querySelector('h3').textContent.toLowerCase();
                    const medicationContent = med.textContent.toLowerCase();
                    
                    if (searchTerm === '' || medicationName.includes(searchTerm) || medicationContent.includes(searchTerm)) {
                        med.style.display = 'block';
                        foundAny = true;
                    } else {
                        med.style.display = 'none';
                    }
                });
                
                // Mostrar mensagem se não encontrar resultados
                document.getElementById('no-results').style.display = foundAny ? 'none' : 'block';
            }
            
            // 5. Inicialização - abrir a primeira classe
            const firstClassHeader = document.querySelector('.class-header');
            if (firstClassHeader) {
                const firstClassBody = firstClassHeader.nextElementSibling;
                firstClassBody.classList.add('active');
                firstClassHeader.querySelector('.btn-toggle').textContent = '-';
            }
        });
    </script>
</body>
</html>
